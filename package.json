{
  "name": "dev-assistant-ai",
  "displayName": "Dev Assistant AI",
  "description": "Let ChatGPT streamline your programming tasks!",
  "version": "0.0.4",
  "icon": "assets/img/icon_nobg.png",
  "publisher": "lucianotonet",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Dev Assistant AI",
      "properties": {
        "devAssistant.serverUrl": {
          "type": "string",
          "default": "https://devassistant.tonet.dev",
          "description": "The URL of the Dev Assistant AI server. If you want to use an LLM hosted at a custom URL, please see https://devassistant.tonet.dev/docs/customization#change-the-default-llm. All other configuration can be done by using the '/config' slash command."
        }
      }
    },
    "commands": [
      {
        "command": "dev-assistant.splash",
        "category": "Dev Assistant AI",
        "title": "Open Splash"
      },
      {
        "command": "dev-assistant.chat",
        "category": "Dev Assistant AI",
        "title": "Open Chat"
      },
      {
        "command": "dev-assistant.login",
        "category": "Dev Assistant AI",
        "title": "Login"
      },
      {
        "command": "dev-assistant.quickFix",
        "category": "Dev Assistant AI",
        "title": "Quick Fix with Dev Assistant AI"
      }
    ],
    "keybindings": [],
    "menus": {
      "view/title": []
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devAssistantViewContainer",
          "title": "Dev Assistant AI",
          "icon": "assets/img/dark-icon.png"
        }
      ]
    },
    "views": {
      "devAssistantViewContainer": [
        {
          "id": "dev-assistant.chatView",
          "name": "Dev Assistant AI Chat",
          "visibility": "visible"
        },
        {
          "id": "dev-assistant.settingsView",
          "name": "Settings",
          "visibility": "collapsed"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/chai": "^4.3.6",
    "ably": "^1.2.44",
    "bufferutil": "^4.0.7",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12",
    "openai": "^4.6.0",
    "posthog-node": "^3.1.2",
    "tailwindcss": "^3.3.3",
    "utf-8-validate": "^6.0.3"
  },
  "husky": {
    "hooks": {
      "post-commit": "yarn version --patch && git add package.json"
    }
  }
}
