{
  "name": "dev-assistant-ai",
  "displayName": "Dev Assistant",
  "description": "Just another AI dev tool",
  "version": "0.0.6",
  "icon": "assets/img/icon_nobg.png",
  "publisher": "lucianotonet",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucianotonet/dev-assistant-vsce.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0",
    "cursor": "^0.10.4"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Dev Assistant",
      "properties": {
        "devAssistant.serverUrl": {
          "type": "string",
          "default": "https://devassistant.tonet.dev",
          "description": "The URL of the Dev Assistant AI server. If you want to use an LLM hosted in your custom URL."
        }
      },
      "resource": {
        "tailwindCSS.experimental.configFile": "./tailwind.config.js",
        "tailwindCSS.files.exclude": [
          "**/node_modules/**"
        ]
      }
    },
    "commands": [
      {
        "command": "dev-assistant-ai.welcome",
        "title": "Welcome",
        "category": "Dev Assistant"
      },
      {
        "command": "dev-assistant-ai.auth",
        "title": "Auth",
        "category": "Dev Assistant"
      },
      {
        "command": "dev-assistant-ai.callback",
        "title": "Callback",
        "category": "Dev Assistant"
      },
      {
        "command": "dev-assistant-ai.deauth",
        "title": "Deauth",
        "category": "Dev Assistant"
      },      
      {
        "command": "dev-assistant-ai.triggerInlineCompletion",
        "title": "Trigger Inline Completion",
        "category": "Dev Assistant"
      },
      {
        "command": "dev-assistant-ai.openChat",
        "title": "Open Chat",
        "category": "Dev Assistant"
      },
      {
        "command": "dev-assistant-ai.doAction",
        "title": "Excute an action",
        "category": "Dev Assistant"
      }
    ],
    "keybindings": [
      {
        "command": "dev-assistant-ai.triggerInlineCompletion",
        "key": "ctrl+alt+enter",
        "mac": "cmd+alt+enter",
        "when": "editorTextFocus"
      }
    ],
    "menus": {},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devAssistantViewContainer",
          "title": "Dev Assistant",
          "icon": "assets/img/dark-icon.png"
        }
      ],
      "panel": [
        {
          "id": "devAssistantChat",
          "name": "Dev Assistant",
          "visibility": "visible",
          "contextualTitle": "Dev Assistant",
          "icon": "assets/img/dark-icon.png",
          "type": "tree",
          "title": "Dev Assistant"
        }
      ]
    },
    "views": {
      "devAssistantChat": [
        {
          "id": "dev-assistant-ai.chat",
          "name": "Dev Assistant",
          "visibility": "visible",
          "contextualTitle": "Dev Assistant",
          "icon": "assets/img/dark-icon.png",
          "type": "webview"
        }
      ],
      "devAssistantViewContainer": [
        {
          "id": "dev-assistant-ai.conversations",
          "name": "Chat history",
          "visibility": "visible",
          "contextualTitle": "Conversations",
          "icon": "assets/img/dark-icon.png",
          "type": "tree"
        },
        {
          "id": "dev-assistant-ai.settings",
          "name": "Settings",
          "visibility": "collapsed",
          "contextualTitle": "Settings",
          "icon": "assets/img/dark-icon.png",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "NODE_ENV=production webpack --mode production --devtool hidden-source-map",
    "dev-package": "NODE_ENV=development webpack --mode development",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "posttest": "yarn run clean-tests",
    "lint": "eslint src --ext ts",
    "clean-tests": "rimraf out"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vscode/test-electron": "^2.3.8",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "ably": "^1.2.44",
    "bufferutil": "^4.0.7",
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "node-machine-id": "^1.1.12",
    "openai": "^4.6.0",
    "posthog-node": "^3.1.2",
    "tailwindcss": "^3.3.6",
    "utf-8-validate": "^6.0.3",
    "uuid": "^9.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn version --patch && git add package.json"
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:devAssistantChat"
  ]
}
